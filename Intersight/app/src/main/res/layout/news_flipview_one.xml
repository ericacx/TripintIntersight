<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/opinionFlipIvPic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_25_80"
        android:src="@mipmap/p1" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/newsFlipViewTvTitle"
            android:text="@string/news_text_title"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/newsFlipViewTvName"
                android:text="好奇心日报"
                android:textColor="@color/line"
                android:layout_marginLeft="@dimen/spacing"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/newsFlipViewTvTrade"
                android:layout_toRightOf="@id/newsFlipViewTvName"
                android:layout_marginLeft="@dimen/spacing"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/line"
                android:text="文/王尼马"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/newsFlipViewAgree"
                android:src="@mipmap/iconfont_mima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/newsFlipViewAgreeNum"
                android:text="285"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/iconfont_mima"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/newsFlipViewTalk"
                android:src="@mipmap/iconfont_mima"
                android:layout_marginLeft="@dimen/single_view_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/newsFlipViewTalkNum"
                android:text="5"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_gravity="center_vertical"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/opinionFlipViewReport"
                android:src="@mipmap/iconfont_mima"
                android:layout_marginLeft="@dimen/single_view_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/opinionFlipViewTvContent"
            android:text="@string/news_text_content"
            android:textSize="@dimen/text_size_12"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:lines="6"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>