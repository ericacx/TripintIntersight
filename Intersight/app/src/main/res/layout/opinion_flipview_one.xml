<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <android.support.v4.view.ViewPager
            android:id="@+id/opinion_flipview_one_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_6_80">

            <TextView
                android:id="@+id/opinion_flipview_one_tv1"
                android:text="行业领域"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/opinion_flipview_one_tv2"
                android:text="我的关注"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/opinion_flipview_one_tv3"
                android:text="精选推荐"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/gray"
                android:layout_height="match_parent" />

        </LinearLayout>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/opinion_flipview_one_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/line"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"/>

        <TextView
            android:id="@+id/opinion_flipview_one_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            android:maxEms="20"
            android:lines="5"
            android:textColor="@color/line"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing"
            >

            <TextView
                android:id="@+id/opinion_flipview_one_name"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_alignParentLeft="true"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/opinion_flipview_one_trade"
                android:layout_toRightOf="@id/opinion_flipview_one_name"
                android:layout_marginLeft="@dimen/spacing"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/opinion_flipview_one_title"
                android:layout_toRightOf="@id/opinion_flipview_one_trade"
                android:layout_marginLeft="@dimen/spacing"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/opinion_flipview_one_time"
                android:textColor="@color/line"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/opinion_flipview_one_title"
                android:gravity="end"
                android:textSize="@dimen/text_size_12"
                android:layout_marginRight="@dimen/spacing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/opinion_flipview_one_down"
            android:src="@mipmap/iconfont_down"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>