<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_container_item_ask_answer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_16_80"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <com.tripint.intersight.widget.image.CircleImageView
                android:id="@+id/image_ask_profile"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="@dimen/spacing"
                android:src="@mipmap/dongcha" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/image_ask_profile"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_item_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:src="@mipmap/iconfont_heartbig02" />

                <TextView
                    android:id="@+id/textView_item_liked_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/text_size_10" />

                <ImageView
                    android:id="@+id/image_item_listened"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:src="@mipmap/iconfont_ear" />

                <TextView
                    android:id="@+id/textView_item_listened_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_item_ask_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/spacing_pad04"
                android:maxLines="2"
                android:text="目前AR技术的整体发展ngukey未来演讲方向????"
                android:textColor="@color/grey_100"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/textView_item_ask_specialist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/spacing_pad04"
                android:text=""
                android:textColor="@color/grey_500"
                android:textSize="@dimen/text_size_10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_4_80"
                android:layout_margin="@dimen/spacing_pad04"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:background="@drawable/img_yuyin_gary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_item_ask_voice_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:text=""
                    android:gravity="center_vertical"
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/text_size_10" />
                <TextView
                    android:id="@+id/textView_item_ask_voice_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textColor="@color/grey_500"
                    android:textSize="@dimen/text_size_10" />
            </RelativeLayout>
        </LinearLayout>

        <com.tripint.intersight.widget.image.TouchImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/iconfont_nextarticle" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing"
            android:background="@drawable/line_grey" />
    </LinearLayout>
</LinearLayout>
