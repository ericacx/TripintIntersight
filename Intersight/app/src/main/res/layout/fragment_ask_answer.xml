<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tripint.intersight.fragment.AskAnswerFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/ask_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/line"
                app:tabIndicatorHeight= "0dp"
                app:tabBackground="@drawable/selector_tab_background"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                />
            <com.tripint.intersight.helper.CustomViewPager
                android:id="@+id/ask_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:id="@+id/ll"
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rb1"
                    android:text="行业洞察+"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rb2"
                    android:text="我的洞察+"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rb3"
                    android:text="精选洞察+"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
