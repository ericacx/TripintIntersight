<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tripint.intersight.fragment.AskAnswerFragment">
    <android.support.design.widget.TabLayout
        android:id="@+id/ask_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/line"
        app:tabIndicatorHeight= "0dp"
        app:tabBackground="@drawable/selector_tab_background"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <com.bigkoo.convenientbanner.ConvenientBanner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_16_80"
            app:canLoop="true"
            />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_ask_answer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fadingEdge="none"/>

    </LinearLayout>
</FrameLayout>
