<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tripint.intersight.fragment.AskAnswerFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/ask_tabLayout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/line"
                app:tabIndicatorHeight= "0dp"
                app:tabBackground="@drawable/selector_tab_background"
                app:tabTextAppearance="@style/TabLayoutTextStyle"
                />
            <com.tripint.intersight.helper.CustomViewPager
                android:id="@+id/ask_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>
