<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.mine.WithdrawFragment">

    <!-- TODO: Update blank fragment layout -->

    <include layout="@layout/toolbar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginTop="@dimen/spacing_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="微信到账"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:textSize="@dimen/text_size_14"
            android:layout_height="@dimen/height_4_80" />

        <TextView
            android:id="@+id/withdraw_bind_weixin"
            android:text="前往绑定微信钱包"
            android:textColor="@color/line"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="@dimen/spacing_02"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_4_80" />

    </LinearLayout>

    <TextView
        android:text="提现P.coin"
        android:layout_margin="@dimen/spacing"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:background="@drawable/bg_corners_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_7_80">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_5_80">

            <ImageView
                android:src="@mipmap/p_coin"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/withdraw_edit_coin"
                android:text=""
                android:hint="请输入提现金额"
                android:textColorHint="@color/line"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/white"
                android:background="@null"
                android:maxLines="1"
                android:inputType="number"
                android:layout_marginLeft="@dimen/spacing"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <TextView
            android:id="@+id/withdraw_money"
            android:text=""
            android:textSize="@dimen/text_size_12"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_gravity="end"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="@dimen/spacing"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="当前账户余额为"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/withdraw_total_coin"
            android:text=""
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/withdraw_total_money"
            android:text=""
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <Button
        android:id="@+id/personal_info_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_80"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_shape"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="@dimen/spacing"
        android:text="确认提现" />

    <TextView
        android:id="@+id/withdraw_rule"
        android:layout_margin="@dimen/spacing"
        android:text="提现规则?"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
