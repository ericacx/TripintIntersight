<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.mine.setting.UserProtocolFragment">

    <include
        android:id="@+id/user_protocol_toolbar"
        layout="@layout/toolbar"
        />

    <ImageView
        android:id="@+id/about_intersight_imageview"
        android:layout_below="@id/user_protocol_toolbar"
        android:gravity="center"
        android:textColor="@color/green_50"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/dongcha"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/spacing" />

    <Button
        android:id="@+id/user_protocol_agree"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_80"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_shape"
        android:text="同意"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_below="@id/about_intersight_imageview"
        android:layout_above="@id/user_protocol_agree"
        android:background="@drawable/bg_corners_grey_20"
        android:layout_marginLeft="@dimen/spacing_03"
        android:layout_marginRight="@dimen/spacing_03"
        android:layout_marginTop="@dimen/spacing"
        android:padding="@dimen/spacing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/use_help_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/line"
                android:text=""
                />

        </ScrollView>
    </RelativeLayout>


</RelativeLayout>
