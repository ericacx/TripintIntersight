<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.PersonalInfoFragment">

    <include
        android:id="@+id/personal_info_toolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/personal_info_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_80"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_shape_blue"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:text="保存" />

    <ScrollView
        android:layout_below="@id/personal_main_page_toolbar"
        android:layout_above="@id/personal_info_submit"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="@dimen/spacing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/personal_info_rl_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/personal_info_next_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/iconfont_nextarticle" />

                <com.tripint.intersight.widget.image.CircleImageView
                    android:id="@+id/personal_info_avatar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing"
                    android:layout_toLeftOf="@id/personal_info_next_one"
                    android:src="@mipmap/iconfont_mima" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="手机号"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white" />


                <EditText
                    android:id="@+id/personal_info_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:inputType="number"
                    android:text="13567894561"
                    android:textColorHint="@color/line"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="邮箱"
                    android:textColor="@color/line" />


                <EditText
                    android:id="@+id/personal_info_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:text="123456789@qq.com"
                    android:textColorHint="@color/line"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="昵称"
                    android:textColor="@color/white" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请填写"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:textColorHint="@color/line" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="公司名称"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请填写"
                    android:maxLines="1"
                    android:inputType="text"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:textColorHint="@color/line" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="公司logo"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white" />


                <ImageView
                    android:id="@+id/personal_info_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/iconfont_nextarticle" />

                <com.tripint.intersight.widget.image.CircleImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/spacing"
                    android:layout_toLeftOf="@id/personal_info_next"
                    android:src="@mipmap/iconfont_mima" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                android:gravity="left|center_vertical"
                android:drawablePadding="@dimen/spacing"
                android:drawableRight="@mipmap/iconfont_nextarticle"
                android:text="所在行业"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                android:gravity="left|center_vertical"
                android:drawablePadding="@dimen/spacing"
                android:drawableRight="@mipmap/iconfont_nextarticle"
                android:text="所属职能"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="职位名称"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white"
                    android:hint="请填写"
                    android:textColorHint="@color/line" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                android:gravity="left|center_vertical"
                android:drawablePadding="@dimen/spacing"
                android:drawableRight="@mipmap/iconfont_nextarticle"
                android:text="工作年限"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/white" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/spacing_pad04"
                android:layout_marginBottom="@dimen/spacing_pad04"
                android:background="@color/line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_5_80"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="个人简介"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_corners_text"
                android:layout_width="match_parent"
                android:padding="@dimen/spacing_pad04"
                android:layout_height="@dimen/height_15_80">

                <EditText
                    android:id="@+id/personal_info_personalInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:inputType="text"
                    android:hint="点击填写"
                    android:textColorHint="@color/line" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
