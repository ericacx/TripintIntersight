<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.PersonalInfoFragment">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginRight="@dimen/spacing"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="头像"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:id="@+id/personalInfoNext"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_nextarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <ImageView
                    android:src="@mipmap/iconfont_mima"
                    android:layout_toLeftOf="@id/personalInfoNext"
                    android:layout_marginRight="@dimen/spacing"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="手机号"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="13567894561"
                    android:textColor="@color/line"
                    android:textSize="@dimen/sp_12"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="邮箱"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <TextView
                    android:text="123456789@qq.com"
                    android:textColor="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="昵称"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:hint="请填写"
                    android:textColorHint="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:src="@mipmap/iconfont_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="公司名称"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:hint="请填写"
                    android:textColorHint="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="公司logo"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_nextarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="所在行业"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_nextarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="所属职能"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_nextarticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="职位名称"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:hint="请填写"
                    android:textColorHint="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="工作年限"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/iconfont_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/spacing"
                android:background="@color/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="个人简介"
                    android:textColor="@color/line"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:hint="点击填写"
                    android:textColorHint="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:text="保存"
        android:background="@drawable/btn_shape1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
