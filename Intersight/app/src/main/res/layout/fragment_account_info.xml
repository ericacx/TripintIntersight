<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.AccountInfoFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@mipmap/iconfont_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帐号信息"
            android:textColor="@color/line"
            android:textSize="@dimen/text_size"
            android:typeface="normal" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/spacing"
        >

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="手机"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/accountInfoArrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:src="@mipmap/iconfont_back"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/accountInfoSet"
                android:text="去设置"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_toLeftOf="@id/accountInfoArrow"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="邮箱"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/accountInfoArrow2"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:src="@mipmap/iconfont_back"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/accountInfoEmail"
                android:text="123456789@qq.com"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_toLeftOf="@id/accountInfoArrow2"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="修改密码"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/accountInfoArrow3"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:src="@mipmap/iconfont_back"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/spacing"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/accountInfoWechat"
                android:text="微信帐号"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/accountInfoWechatName"
                android:text="Susan"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/accountInfoWechat"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:src="@mipmap/iconfont_back"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
        <View
            android:background="@color/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/accountInfoLinkendIn"
                android:text="领英帐号"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/accountInfoLinkendInName"
                android:text="Susan"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/accountInfoLinkendIn"
                android:layout_centerVertical="true"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Switch
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:textColor="@color/line"
                android:src="@mipmap/iconfont_back"
                android:textSize="@dimen/text_size_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
