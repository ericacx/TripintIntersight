<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/spacing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="9"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/search_text_view_title_main"
                android:text="我的提问（已回答）rawerwerwerwerwerwerwerwrwer"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/search_text_view_title_sub"
                android:text="目前AR技术的整体发展情况以及未来演讲方向?"
                android:textColor="@color/line"
                android:layout_marginTop="@dimen/spacing"
                android:maxLines="3"
                android:textSize="@dimen/text_size_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="@dimen/spacing_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/search_text_view_other"
                    android:text="2016.09.06  15:30"
                    android:layout_marginRight="@dimen/spacing"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/line"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/search_text_view_industry"
                    android:text="电子 | 通信 | 硬件"
                    android:textColor="@color/line"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_12"
                    android:layout_marginRight="@dimen/spacing"
                    android:layout_toLeftOf="@id/search_text_view_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:src="@mipmap/iconfont_nextarticle"
            android:layout_gravity="center_vertical|right"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing"
            android:background="@drawable/line_grey" />
    </LinearLayout>
</LinearLayout>