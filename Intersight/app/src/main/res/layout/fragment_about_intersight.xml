<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.mine.setting.AboutIntersightFragment">

    <include layout="@layout/toolbar" />


    <RelativeLayout
        android:layout_margin="@dimen/width_2_80"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_42_80">
        <ImageView
            android:id="@+id/about_intersight_imageview"
            android:gravity="center"
            android:textColor="@color/green_50"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/dongcha"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/spacing" />

        <TextView
            android:id="@+id/editor_feedback_content"
            android:layout_below="@id/about_intersight_imageview"
            android:background="@drawable/bg_corners_grey_20"
            android:textSize="@dimen/text_size"
            android:layout_marginLeft="@dimen/spacing_02"
            android:layout_marginRight="@dimen/spacing_02"
            android:layout_marginTop="@dimen/spacing"
            android:textColor="@color/line"
            android:text="@string/about_intersight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/about_intersight_textview_time"
            android:text="Copyright @2015-2035"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/about_intersight_textview_company"
            android:layout_below="@id/about_intersight_textview_time"
            android:text="推聘信息科技（上海）有限公司"
            android:textColor="@color/line"
            android:textSize="@dimen/text_size_15"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
