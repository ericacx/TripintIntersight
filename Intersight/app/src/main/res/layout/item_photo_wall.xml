<com.tripint.intersight.common.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo_wall_item_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/loading_normal_icon" />

    <CheckBox
        android:id="@+id/photo_wall_item_cb"
        android:layout_width="@dimen/width_6_80"
        android:layout_height="@dimen/width_6_80"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:background="@drawable/selector_btn_checkbox_green"
        android:button="@null" />

</com.tripint.intersight.common.widget.SquareRelativeLayout>