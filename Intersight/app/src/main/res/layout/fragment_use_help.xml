<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/background_default"
    tools:context="com.tripint.intersight.fragment.mine.UseHelpFragment">

    <include layout="@layout/toolbar"/>


    <ImageView
        android:id="@+id/about_intersight_imageview"
        android:layout_marginTop="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/green_50"
        android:src="@mipmap/dongcha"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/spacing" />


    <RelativeLayout
        android:background="@drawable/bg_corners_grey_20"
        android:layout_marginLeft="@dimen/spacing_03"
        android:layout_marginRight="@dimen/spacing_03"
        android:layout_marginTop="@dimen/spacing"
        android:layout_marginBottom="@dimen/spacing_02"
        android:padding="@dimen/spacing"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/use_help_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/line"
                android:text=""
                />

        </ScrollView>
    </RelativeLayout>
</LinearLayout>
