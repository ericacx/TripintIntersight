<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/opinion_flipview_two_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_25_80"
        android:src="@mipmap/p1" />


    <Button
        android:id="@+id/opioion_flipview_two_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_5_80"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/width_10_80"
        android:layout_marginRight="@dimen/width_10_80"
        android:layout_marginBottom="@dimen/spacing"
        android:background="@drawable/btn_shape"
        android:text="发表观点"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/opioion_flipview_two_submit"
        android:layout_below="@id/opinion_flipview_two_pic"
        android:layout_marginTop="@dimen/spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/opinion_flipview_two_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/opinion_flipview_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/opinion_flipview_two_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/opinion_flipview_two_name"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/opinion_flipview_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/opinion_flipview_two_trade"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing"
            android:layout_marginTop="@dimen/spacing"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/opinion_flipview_two_agreeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_4_80"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/iconfont_zan01"
                    android:drawablePadding="@dimen/spacing"
                    android:textSize="@dimen/text_size_12"
                    android:textColor="@color/line" />

                <TextView
                    android:id="@+id/opinion_flipview_two_talkNum"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_4_80"
                    android:gravity="center_vertical"
                    android:drawablePadding="@dimen/spacing"
                    android:layout_marginLeft="@dimen/spacing"
                    android:textSize="@dimen/text_size_12"
                    android:drawableLeft="@mipmap/iconfont_heartbig01"
                    android:textColor="@color/line" />

                <TextView
                    android:id="@+id/opinion_flipview_two_report"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/height_4_80"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:drawablePadding="@dimen/spacing"
                    android:textSize="@dimen/text_size_12"
                    android:drawableLeft="@mipmap/iconfont_jubao"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/opinion_flipview_two_time"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/height_4_80"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                android:textColor="@color/line"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/text_size_12"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/opinion_flipview_two_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.5"
            android:maxEms="10"
            android:maxLines="4"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>


</RelativeLayout>