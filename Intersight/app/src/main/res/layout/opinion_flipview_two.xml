<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/opinion_flipview_two_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_25_80"
         />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/opinion_flipview_two_pic"
        android:layout_marginTop="@dimen/spacing"
        android:orientation="vertical">

        <TextView
            android:id="@+id/opinion_flipview_two_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/opinion_flipview_two_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/opinion_flipview_two_trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/opinion_flipview_two_name"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/opinion_flipview_two_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing"
                android:layout_toRightOf="@id/opinion_flipview_two_trade"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:src="@mipmap/iconfont_zan01"
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/opinion_flipview_two_agreeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:textColor="@color/line"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:src="@mipmap/iconfont_heartbig01"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/opinion_flipview_two_talkNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:textColor="@color/line"
                    android:textSize="@dimen/text_size_12" />

                <ImageView
                    android:src="@mipmap/iconfont_jubao"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/opinion_flipview_two_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_12"
                    />
            </LinearLayout>


            <TextView
                android:id="@+id/opinion_flipview_two_time"
                android:layout_width="0dp"
                android:layout_height="@dimen/height_4_80"
                android:layout_gravity="end"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:textColor="@color/line"
                android:textSize="@dimen/text_size_12"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/opinion_flipview_two_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.5"
            android:maxEms="10"
            android:maxLines="8"
            android:padding="@dimen/spacing"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>


</RelativeLayout>