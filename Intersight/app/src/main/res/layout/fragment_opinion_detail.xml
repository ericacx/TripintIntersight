<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripint.intersight.fragment.home.OpinionDetailFragment">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/height_7_80"
            android:layout_marginTop="?attr/actionBarSize"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/opinion_flipview_two_pic"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_25_80"
                    android:src="@mipmap/p1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/opinion_flipview_two_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/spacing"
                        android:text="@string/opinion_text_title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/opinion_flipview_two_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing"
                            android:text="Maggie"
                            android:textColor="@color/line"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/opinion_flipview_two_trade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing"
                            android:layout_toRightOf="@id/opinion_flipview_two_name"
                            android:text="互联网 | 游戏 | 软件"
                            android:textColor="@color/line"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/opinion_flipview_two_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing"
                            android:layout_toRightOf="@id/opinion_flipview_two_trade"
                            android:text="销售总监"
                            android:textColor="@color/line"
                            android:textSize="@dimen/text_size_12" />

                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/spacing"
                        android:layout_marginTop="@dimen/spacing"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/opinion_flipview_two_agreeNum"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_4_80"
                            android:layout_marginLeft="@dimen/spacing"
                            android:drawableLeft="@mipmap/iconfont_zan01"
                            android:drawablePadding="@dimen/spacing"
                            android:gravity="center_vertical"
                            android:text="285"
                            android:textColor="@color/line" />

                        <TextView
                            android:id="@+id/opinion_flipview_two_talkNum"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_4_80"
                            android:layout_marginLeft="@dimen/spacing"
                            android:drawableLeft="@mipmap/iconfont_heartbig01"
                            android:drawablePadding="@dimen/spacing"
                            android:gravity="center_vertical"
                            android:text="5"
                            android:textColor="@color/line" />

                        <TextView
                            android:id="@+id/opinion_flipview_two_report"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/height_4_80"
                            android:layout_marginLeft="@dimen/spacing"
                            android:drawableLeft="@mipmap/iconfont_jubao"
                            android:drawablePadding="@dimen/spacing"
                            android:gravity="center_vertical" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/opinion_flipview_two_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.5"
                        android:maxLines="10"
                        android:padding="@dimen/spacing"
                        android:text="@string/opinion_text_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12" />


                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/user_replay_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_7_80"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/colorToolbarPrimary"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:visibility="visible">

        <TextView
            android:id="@+id/text_view_comment_submit"
            android:layout_width="@dimen/width_8_80"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/spacing"
            android:layout_weight="3"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/text_colors_white" />

        <EditText
            android:id="@+id/edit_user_comment_replay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_margin="@dimen/spacing"
            android:layout_toLeftOf="@id/text_view_comment_submit"
            android:background="@drawable/btn_shape_corner"
            android:hint="我也说两句"
            android:padding="@dimen/spacing"
            android:textColor="@color/text_colors_black_light"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_12" />
    </RelativeLayout>

</RelativeLayout>
