<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_time"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/line"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/message_content"
            android:layout_marginRight="30dp"
            android:layout_marginTop="5dp"
            android:lineSpacingMultiplier="1.2"
            android:layout_below="@id/message_time"
            android:textSize="@dimen/text_size_14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/message_status"
            android:layout_below="@id/message_content"
            android:drawableRight="@mipmap/iconfont_nextarticle"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/line"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_below="@id/accountDetailItemTvStatus"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/line_grey"/>
</LinearLayout>