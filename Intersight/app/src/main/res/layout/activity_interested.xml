<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.tripint.intersight.activity.InterestedActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <ImageView
        android:id="@+id/imageView"
        android:src="@mipmap/img_choseone"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/height_2_80"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/interestedNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_4_80"
        android:layout_gravity="center"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="@dimen/height_2_80"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_shape"
        android:text="下一步"
        android:textSize="14sp"
        android:textColor="@color/line" />

    <ListView
        android:id="@+id/interestedGridView"
        android:layout_below="@id/imageView"
        android:layout_above="@id/interestedNext"
        android:layout_marginTop="@dimen/height_2_80"
        android:dividerHeight="@dimen/height_2_80"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
