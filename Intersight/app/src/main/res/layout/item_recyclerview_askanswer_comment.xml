<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing"
        >
        <com.tripint.intersight.widget.image.CircleImageView
            android:id="@+id/image_ask_profile"
            android:layout_width="@dimen/width_12_80"
            android:layout_height="@dimen/height_6_80"
            android:layout_margin="@dimen/width_2_80"
            android:layout_centerHorizontal="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_avatar" />

        <TextView
            android:id="@+id/textView_item_ask_action"
            android:layout_width="@dimen/width_8_80"
            android:layout_height="@dimen/height_3_80"
            android:textColor="@color/grey_500"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text=""
            android:background="@mipmap/iconfont_pinglun"
            android:textSize="@dimen/text_size_12"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textView_item_ask_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:lines="2"
            android:layout_below="@id/textView_item_ask_specialist"
            android:textColor="@color/grey_100"
            android:layout_toRightOf="@id/image_ask_profile"
            android:text=""
            android:textSize="@dimen/text_size_14"
            android:layout_margin="@dimen/spacing_pad04"/>


        <TextView
            android:id="@+id/textView_item_ask_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_500"
            android:text="2016.09.12 12:00:00"
            android:textSize="@dimen/text_size_9"
            android:layout_margin="@dimen/spacing_pad04"/>

        <TextView
            android:id="@+id/textView_item_ask_specialist"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_4_80"
            android:layout_gravity="center_vertical"
            android:textColor="@color/grey_500"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/textView_item_ask_action"
            android:layout_toRightOf="@id/image_ask_profile"
            android:text=""
            android:textSize="@dimen/text_size_12"
            android:layout_alignTop="@+id/textView_item_ask_action"
            android:layout_alignLeft="@+id/textView_item_ask_title"
            android:layout_alignStart="@+id/textView_item_ask_title" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"

        android:background="@drawable/line_grey"/>
</LinearLayout>
