<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar_search" />

    <com.tripint.intersight.common.widget.filter.DropDownMenu
        android:id="@+id/search_drop_down_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mFilterContentView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_ask_answer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/background_default"
                android:fadingEdge="none" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </com.tripint.intersight.common.widget.filter.DropDownMenu>


</LinearLayout>
