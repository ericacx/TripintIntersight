<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tripint.intersight">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.ResigterActivity" />
        <activity android:name=".activity.ForgetPasswordActivity" />
        <activity android:name=".activity.VerifyPhoneActivity" />
        <activity android:name=".activity.UserProtocolActivity" />
        <activity android:name=".activity.InterestedActivity" />
        <activity android:name=".activity.FocusTradeActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.MessageActivity" />
        <activity android:name=".activity.SettingActivity" />
        <activity android:name=".activity.PersonalInfoActivity" />
        <activity android:name=".activity.AdviceFeedbackActivity" />
        <activity android:name=".activity.AboutIntersightActivity"></activity>

        <meta-data
            android:name="com.bumptech.glide.integration.okhttp3.OkHttpGlideModule"
            android:value="GlideModule" />
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 网络状态权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>